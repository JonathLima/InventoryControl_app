<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ControleDeProdutos" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>

        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#F76A65</item>
        <!-- Customize your theme here. -->

        <item name="actionOverflowButtonStyle">@style/styleToolbar</item>
    </style>

    <style name="Theme.ControleDeProdutos.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ControleDeProdutos.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ControleDeProdutos.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="styleToolbar" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">
            #FFFFFF
        </item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">

    </style>

</resources>